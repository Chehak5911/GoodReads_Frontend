{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "plugins": ["react", "simple-import-sort"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "simple-import-sort/imports": "error",
      "semi" : [1, "always"]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  